<h3> Welcome  {{user_name}}</h3>
<div class="container">
                           <div class="container-fluid">
                               <p> Create a new post</p>
                                <div class=" row justify-content-end">
                                    <div>
                                        <h3 class="post_submit"> Post title </h3>
                                        <textarea class="text col-9" id="title"></textarea>

                                    <h3 class="post_submit"> Post body </h3>
                                        <textarea class="text col-9" id="text"></textarea>
                                    </div>
                                    <button class="button col-2" id="postbtn" data-id="{{id}}">Post</button>
    
                                </div>
                            </div>

<section>
    <h2> My posts</h2>
</section>                    
{{#each posts as |post|}}
<div class="card col-8 postmain">
	<h5 class="card-title"><a href="api/post/read/{{id}}">  {{post.post_title}}</a> </h5>
	<p class="card-text">
	created on	{{format_date post.date_created}}
	</p>
    <br>
    <P> {{ post.post_text}}</P>
    <div class="container-fluid">
        <div class="row justify-content-end">
            <button data-id="{{id}}" id="deletebtn" class="button col-4"> Delete post</button> 
            
        </div>
    </div>
</div>

{{/each}}


<script src="js/newPost.js"></script>
<script src="js/deletePost.js"></script>